@page
@model PRN221.ClinicDental.Presentation.Pages.ClinicOwner.ManageClinic.EditClinicModel

@{
    ViewData["Title"] = "EditClinic";
}

<h1>Edit Clinic</h1>

<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <form method="post" enctype="multipart/form-data" class="shadow p-5 rounded">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Clinic.Id" />
            <div class="form-group">
                <label asp-for="Clinic.Name" class="control-label font-weight-bold">Clinic Name</label>
                <input asp-for="Clinic.Name" class="form-control" />
                <span asp-validation-for="Clinic.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Clinic.ImageURL" class="control-label font-weight-bold">Clinic Image</label>
                <div class="custom-file">
                    <input asp-for="Clinic.ImageURL" class="custom-file-input" type="file" id="customFile" />
                </div>
                <span asp-validation-for="Clinic.ImageURL" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Clinic.StreetAddress" class="control-label font-weight-bold">Street Address</label>
                <input asp-for="Clinic.StreetAddress" class="form-control" />
                <span asp-validation-for="Clinic.StreetAddress" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Clinic.District" class="control-label font-weight-bold">District</label>
                <select asp-for="Clinic.District" class="form-control" asp-items="ViewBag.Districts"></select>
                <span asp-validation-for="Clinic.District" class="text-danger"></span>
            </div>

            <div class="form-group text-center mt-5">
                <input type="submit" value="Save" class="btn btn-primary btn-block" />
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-page="./Index" class="btn btn-outline-secondary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
