@page
@model PRN221.ClinicDental.Presentation.Pages.ClinicOwner.ManageDoctor.EditDentistModel
@{
    ViewData["Title"] = "EditDentist";
}

<h1 class="text-center my-4 display-4">Edit Dentist</h1>
<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <form method="post" class="shadow p-4 rounded bg-light">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="Dentist.ID" />
            <div class="form-group">
                <label asp-for="Dentist.FullName" class="control-label font-weight-bold">Full Name</label>
                <input asp-for="Dentist.FullName" class="form-control" />
                <span asp-validation-for="Dentist.FullName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Dentist.PhoneNumber" class="control-label font-weight-bold">Phone Number</label>
                <input asp-for="Dentist.PhoneNumber" class="form-control" />
                <span asp-validation-for="Dentist.PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Dentist.Address" class="control-label font-weight-bold">Address</label>
                <input asp-for="Dentist.Address" class="form-control" />
                <span asp-validation-for="Dentist.Address" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Dentist.Certificate" class="control-label font-weight-bold">Certificate</label>
                <input asp-for="Dentist.Certificate" class="form-control" />
                <span asp-validation-for="Dentist.Certificate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Dentist.Qualification" class="control-label font-weight-bold">Qualification</label>
                <input asp-for="Dentist.Qualification" class="form-control" />
                <span asp-validation-for="Dentist.Qualification" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Dentist.Experience" class="control-label font-weight-bold">Experience</label>
                <input asp-for="Dentist.Experience" class="form-control" />
                <span asp-validation-for="Dentist.Experience" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Dentist.ServiceId" class="control-label"></label>
                <select asp-for="Dentist.ServiceId" class="form-control" asp-items="ViewBag.ServiceId" multiple="multiple"></select>
            </div>

            <div class="form-group text-center mt-4">
                <input type="submit" value="Save" class="btn btn-primary btn-block" />
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-page="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}