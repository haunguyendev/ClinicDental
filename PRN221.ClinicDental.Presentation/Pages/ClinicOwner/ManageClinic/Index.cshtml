@page
@model PRN221.ClinicDental.Presentation.Pages.ClinicOwner.ManageClinic.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Clinic[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clinic[0].ImageURL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clinic[0].OpeningTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clinic[0].ClosingTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clinic[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clinic[0].ClinicOwner)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Clinic) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImageURL)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OpeningTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClosingTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address.District)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClinicOwner.Email)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ClinicId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ClinicId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ClinicId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
