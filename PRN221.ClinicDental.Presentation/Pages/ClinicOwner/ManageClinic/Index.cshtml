@page
@model PRN221.ClinicDental.Presentation.Pages.ClinicOwner.ManageClinic.IndexModel

@{
    ViewData["Title"] = "Index";
}


<h1 class="fst-italic d-flex justify-content-center ">Clinic Management</h1>

<p>
    <a asp-page="CreateClinic">Create New</a>
</p>

<table class="table  table-striped table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Clinic[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clinic[0].Address.StreetAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clinic[0].Address.District)
            </th>
            <th>
                
                @Html.DisplayNameFor(model => model.Clinic[0].ClinicServices)
            </th>
            <th>
                Image
            </th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Clinic)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address.StreetAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address.District)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ClinicServices)
                </td>
                <td>
                    <img src="@item.ImageURL" class="img-thumbnail" style="width: 100px; height: 100px">
                </td>
                <td>
                    <button class="btn btn-primary">
                        <a style="text-decoration: none; color: inherit " asp-page="./Edit" asp-route-id="@item.ClinicId">Edit</a>
                    </button>
                 </td>
                 <td>
                    <button class="btn btn-danger"> <a style="text-decoration: none; color: inherit " asp-page="./Delete" asp-route-id="@item.ClinicId">Delete</a></button>
                </td>
            </tr>
        }
    </tbody>
</table>
