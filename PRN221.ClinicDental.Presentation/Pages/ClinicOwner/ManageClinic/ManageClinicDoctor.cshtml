@page
@model PRN221.ClinicDental.Presentation.Pages.ClinicOwner.ManageClinic.ManageClinicDoctorModel

@{
    ViewData["Title"] = "ManageClinicDoctor";
}

<h1>Manage Clinic Doctors</h1>

<div class="text-right mb-3">
    <a asp-page="Create" class="btn btn-primary">Create New</a>
</div>

<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Certificate</th>
            <th>Qualification</th>
            <th>Experience</th>
            <th>Email</th>
            <th>Name</th>
            <th>Update</th>
            <th>DoctorService</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.DentistDetail)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Certificate)</td>
                <td>@Html.DisplayFor(modelItem => item.Qualification)</td>
                <td>@Html.DisplayFor(modelItem => item.Experience)</td>
                <td>@Html.DisplayFor(modelItem => item.User.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.User.Name)</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.DentistDetailId" class="btn btn-warning btn-sm">Edit</a>
                </td>
                <td>

                    <a asp-page="./DentistService" asp-route-id="@item.DentistDetailId" class="btn btn-success btn-sm">Manage</a>
     
                </td>
            </tr>
        }
    </tbody>
</table>
