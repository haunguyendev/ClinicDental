@page
@model PRN221.ClinicDental.Presentation.Pages.ClinicOwner.ManageClinic.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1 class="fst-italic d-flex justify-content-center display-4 mb-4">Clinic Management</h1>

<p class="text-center">
    <a asp-page="CreateClinic" class="btn btn-success mb-4">Create New Clinic</a>
</p>

<table class="table table-striped table-bordered table-hover shadow">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Clinic[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clinic[0].Address.StreetAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clinic[0].Address.District)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clinic[0].ClinicServices)
            </th>
            <th>
                Image
            </th>
            <th>
                Edit
            </th>
            <th>
                Clinic's Service
            </th>
            <th>
                Doctor
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Clinic)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address.StreetAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address.District)
                </td>
                <td>
                    @foreach (var i in item.ClinicServices)
                    {
                        <div>
                            @Html.DisplayFor(modelItem => i.Service.ServiceName)
                        </div>
                    }
                </td>
                <td>
                    <img src="@item.ImageURL" class="img-thumbnail" style="width: 100px; height: 100px">
                </td>
                <td>
                    <a asp-page="./EditClinic" asp-route-id="@item.ClinicId" class="btn btn-primary">Edit</a>
                </td>
                <td>
                    <a asp-page="./" asp-route-id="@item.ClinicId" class="btn btn-warning">Manage</a>
                </td>
                <td>
                    <a asp-page="./ManageClinicDoctor" asp-route-id="@item.ClinicId" class="btn btn-info">Manage</a>
                </td>
            </tr>
        }
    </tbody>
</table>

